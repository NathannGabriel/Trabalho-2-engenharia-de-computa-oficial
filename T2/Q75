def sao_anagramas(palavra1, palavra2):
    limpa1 = ''.join(palavra1.lower().split())
    limpa2 = ''.join(palavra2.lower().split())
    return sorted(limpa1) == sorted(limpa2)

print(sao_anagramas("amor", "roma"))       
print(sao_anagramas("Python", "typhon"))    
print(sao_anagramas("python", "Java"))       